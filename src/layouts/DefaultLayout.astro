---
import BaseHead from '../components/BaseHead.astro'
import BlogHeader from '../components/BlogHeader.astro'

let title = 'My Astro Site'
let description = 'A starter Astro blog site'
let permalink = 'http://localhost:3000'
---

<html lang="en-AU">
	<head>
		<BaseHead title={title} description={description} permalink={permalink} />
	</head>
	<body>
		<BlogHeader />
		<div class="wrapper">
			<main class="content">
				<slot />
			</main>
		</div>
	</body>
</html>

<style>
	header {
		width: 100%;
		height: 100%;
		background-color: var(--theme-bg-offset);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.content {
		margin-top: 4rem;
		margin-bottom: 8rem;
	}
</style>